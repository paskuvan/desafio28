<p id="notice"><%= notice %></p>

<h1>Areas</h1>

<div class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= link_to 'Show', area, class:'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_area_path(area), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</div class="table">

<br>

<%= link_to 'New Area', new_area_path, class:'btn btn-info' %>